<Window x:Class="TouchenceSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouchenceSample"
        mc:Ignorable="d"
        Title="Touchence Sample" Height="250" Width="500" Closing="Window_Closing">
    <Grid>
        <Label x:Name="label_ServerPort" Content="Port" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_ComPort" Content="COM Port" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonSetBackGroundData" Content="Set background" HorizontalAlignment="Left" Margin="382,35,0,0" VerticalAlignment="Top" Width="96" Click="buttonSetBackGroundData_Click"/>
        <TextBox x:Name="textBoxTouchSensorData" HorizontalAlignment="Left" Height="140" Margin="10,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="468" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible"/>

    </Grid>
</Window>
